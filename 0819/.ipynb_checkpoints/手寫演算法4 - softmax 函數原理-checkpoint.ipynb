   "source": [
    "# 練習寫入softmax 函數\n",
    "\n",
    "import numpy as np\n",
    "\n",
    "a = np.array([0.3,2.9,4.0])\n",
    "\n",
    "# 看看指數結果\n",
    "exp_a = np.exp(a)\n",
    "print(exp_a) \n",
    "\n",
    "# 加總\n",
    "sum_exp_a = np.sum(exp_a)\n",
    "print(sum_exp_a)\n",
    "\n",
    "# softmax 函數\n",
    "y = exp_a / sum_exp_a\n",
    "print(y)\n",
    "print(np.sum(y)) #其結果加總等於 1.0，相當於抓比例\n"
   ]
  }
 ],
